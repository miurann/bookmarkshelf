<%= turbo_frame_tag tag do %>
  <div class="flex flex-row p-2 hover:bg-neutral">
    <div class="w-2/3">
      <%= tag.name %>
    </div>
    <div class="w-1/3 flex flex-row justify-end">
      <%= link_to edit_tag_path(tag) do %>
        <i class="fa-regular fa-pen-to-square fa-lg mr-2"></i>
      <% end %>
      <%= button_to tag_path(tag), method: :delete, data: { turbo_confirm: t('defaults.messages.delete_confirm') } do %>
        <i class="fa-solid fa-trash-can fa-lg"></i>
      <% end %>
    </div>
  </div>
<% end %>
