<div class="w-fit mx-auto mt-6">
  <h1 class="font-bad text-3xl text-secondary">Edit Profile</h1>
</div>
<div class="container mx-auto w-1/3 mt-4 h-2/3 flex flex-col overflow-auto">
<%= form_with model: @user, url: profile_path, local: true do |form| %>
    <%= render 'shared/error_messages', object: form.object %>
      <%= form.label :name, style: "display: block", class: 'text-neutral' %>
      <%= form.text_field :name, class: 'input input-bordered input-sm w-full my-3' %>

      <%= form.label :email, style: "display: block", class: 'text-neutral' %>
      <%= form.text_field :email, class: 'input input-bordered input-sm w-full my-3' %>

            <div>
        <%= form.submit t('defaults.register'), class:'btn btn-primary' %>
      </div>
<% end %>
</div>
