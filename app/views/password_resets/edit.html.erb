<div class="w-fit mx-auto mt-16">
  <h1 class="font-bad text-3xl text-secondary">New Password</h1>
</div>
<div class="container mx-auto w-1/3 my-16">
  <%= form_with model: @user, url: password_reset_path(@token), local: true do |form| %>
    <%= render 'shared/error_messages', object: form.object %>
      <div class="form-group text-white mb-2">
        <%= form.label :email %>
        <%= @user.email %>
      </div>
    <div class="field">
      <%= form.label :password, class: 'text-neutral' %>
      <%= form.password_field :password, class: 'input input-bordered input-sm w-full my-3' %>
    </div>
    <div class="field">
      <%= form.label :password_confirmation, class: 'text-neutral' %>
      <%= form.password_field :password_confirmation, class: 'input input-bordered input-sm w-full my-3' %>
    </div>
    <div class="actions">
      <%= form.submit t('password_resets.new.submit'), class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
