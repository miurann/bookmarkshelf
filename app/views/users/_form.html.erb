<div class="w-full">
  <%= form_with(model: user) do |form| %>
    <%= render 'shared/error_messages', object: form.object %>

      <%= form.label :name, style: "display: block", class: 'text-neutral' %>
      <%= form.text_field :name, class: 'input input-bordered input-sm w-full my-3' %>

      <%= form.label :email, style: "display: block", class: 'text-neutral' %>
      <%= form.text_field :email, class: 'input input-bordered input-sm w-full my-3' %>

      <%= form.label :password, style: "display: block", class: 'text-neutral' %>
      <%= form.password_field :password, class: 'input input-bordered input-sm w-full my-3' %>

      <%= form.label :password_confirmation, style: "display: block", class: 'text-neutral' %>
      <%= form.password_field :password_confirmation, class: 'input input-bordered input-sm w-full my-3' %>
      <div>
        <%= form.submit t('defaults.register'), class:'btn btn-primary' %>
      </div>
  <% end %>
</div>
